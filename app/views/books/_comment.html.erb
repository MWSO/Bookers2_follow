<% book.book_comments.each do |book_comment| %>
  <%= book_comment.user.name %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: '本当に消しますか？' } %>
  <% end %>
<% end %>

<%= form_with model: [book, comment] do |f| %>
  <%= f.text_area :comment, row: "5", placeholder: "コメント" %>
  <%= f.submit "送信", class: "btn btn-success" %>
<% end %>

